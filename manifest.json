{
  "manifest_version": 3,
  "name": "AI Review Assistant",
  "version": "1.0",
  "description": "AI-powered Amazon review generator using Gemini and WordHero",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://app.wordhero.co/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AI Review Assistant",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/review/*"],
      "js": ["content-scripts/amazon.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png"
  }
}