{
  "manifest_version": 3,
  "name": "AI Review Assistant",
  "version": "1.0.1",
  "description": "Helps generate product reviews on Amazon by automating interactions with AI writing services.",
  "permissions": [
    "tabs",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "https://www.amazon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/review/review-your-purchases/*"
      ],
      "js": [
        "content-scripts/amazon.js"
      ]
    }
  ],
  "action": {
    "default_title": "AI Review Assistant"
  }
}

